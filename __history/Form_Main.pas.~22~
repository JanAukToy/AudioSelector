unit Form_Main;

interface

uses
  Winapi.Windows,
  Winapi.Messages,
  System.SysUtils,
  System.Variants,
  System.Classes,
  Vcl.Graphics,
  Vcl.Controls, Vcl.Forms,
  Vcl.Dialogs,
  Vcl.StdCtrls, Vcl.ExtCtrls,

  cls_AudioDeviceManager;

type
  TFormMain = class(TForm)
    TrayIcon1: TTrayIcon;
    pnl_Client: TPanel;
    pnl_AudioDeviceBox: TPanel;
    procedure FormCreate(Sender: TObject);
    procedure FormDestroy(Sender: TObject);
  private
    { Private 宣言 }
    f_AudioDeviceManager: TAudioDeviceManager;
  public
    { Public 宣言 }
  end;

var
  FormMain: TFormMain;

implementation

uses
  cls_AudioDevice;

{$R *.dfm}

// *****************************************************************************
// Constructor
procedure TFormMain.FormCreate(Sender: TObject);
var
  ii: Integer;
  l_Button: TButton;
begin
  // Create Manager
  f_AudioDeviceManager := TAudioDeviceManager.Create;

  // Create Button using Audio Device
  for ii := 0 to f_AudioDeviceManager.Count - 1 do
  begin
    l_Button := TButton.Create(pnl_AudioDeviceBox);
    l_Button.Caption := f_AudioDeviceManager[ii].FriendlyName;
    l_Button.Align := alLeft;
    l_Button.Width := 100;
  end;
end;

// *****************************************************************************
// Destructor
procedure TFormMain.FormDestroy(Sender: TObject);
begin
  FreeAndNil(f_AudioDeviceManager);
end;

end.
